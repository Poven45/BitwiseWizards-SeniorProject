@model List<User>

<div class="list-group">
@foreach (var user in Model)
{
    <div class="list-group-item d-flex justify-content-between align-items-center user-row" data-user-id="@user.Id">
        <span><strong>@user.Username</strong> (@user.Email)</span>
        <button class="btn btn-sm @(user.IsSuspended == true ? "btn-danger" : "btn-warning") suspend-btn"
                data-user-id="@user.Id">
            @(user.IsSuspended == true ? "Reactivate" : "Suspend")
        </button>
    </div>
}
</div>
