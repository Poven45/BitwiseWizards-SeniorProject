<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="cta-title mb-4">Ready to join the trusted trading community?</h2>
                <p class="cta-subtitle mb-4">Start sharing your investing journey with verified traders today.</p>
                <div class="cta-buttons">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg me-3 rounded-pill">
                        <i class="bi bi-person-plus-fill me-2"></i>Create Account
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg rounded-pill">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>