@{
    ViewData["Title"] = "Welcome to TrustTrade";
    Layout = "_LandingLayout";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <!-- Capstone Project Banner -->
            <div class="alert alert-info text-center mb-0" role="alert">
                <strong>Educational Project:</strong> TrustTrade is a capstone project for educational purposes only. Social media links and other external connections are non-functional. Plaid integration uses sandbox mode only.
            </div>
            <div class="col-lg-6 hero-content">
                <h1 class="display-4 fw-bold mb-4">Verify, Trade, Connect</h1>
                <p class="lead mb-4">Join the trading community where real traders share verified investment strategies, connect their actual brokerage accounts, and build a trusted network.</p>
                <div class="cta-buttons">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg me-3 rounded-pill">
                        <i class="bi bi-person-plus-fill me-2"></i>Sign Up
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg rounded-pill">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                    </a>
                </div>
            </div>
            <div class="col-lg-6 hero-image">
                <img src="/img/landing/hero-image.svg" alt="TrustTrade Platform" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5" id="features">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Why Choose TrustTrade?</h2>
            <p class="section-subtitle">A platform built for traders who value transparency and community</p>
        </div>
        
        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-md-6 col-lg-3">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3 class="feature-title">Verified Accounts</h3>
                    <p class="feature-description">Connect your brokerage account to verify your holdings and build credibility with other traders.</p>
                </div>
            </div>
            
            <!-- Feature 2 -->
            <div class="col-md-6 col-lg-3">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <h3 class="feature-title">Track Performance</h3>
                    <p class="feature-description">Monitor your investment performance and compare strategies with a community of like-minded traders.</p>
                </div>
            </div>
            
            <!-- Feature 3 -->
            <div class="col-md-6 col-lg-3">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 class="feature-title">Community Insights</h3>
                    <p class="feature-description">Share strategies, discuss market trends, and learn from experienced investors in our growing community.</p>
                </div>
            </div>
            
            <!-- Feature 4 -->
            <div class="col-md-6 col-lg-3">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-newspaper"></i>
                    </div>
                    <h3 class="feature-title">Market News</h3>
                    <p class="feature-description">Stay updated with the latest financial news and insights that impact your investment decisions.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works-section py-5" id="how-it-works">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">How It Works</h2>
            <p class="section-subtitle">Three simple steps to join our trading community</p>
        </div>
        
        <div class="row g-4">
            <!-- Step 1 -->
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <h3 class="step-title">Create an Account</h3>
                    <p class="step-description">Sign up and create your TrustTrade profile in less than a minute.</p>
                </div>
            </div>
            
            <!-- Step 2 -->
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number">2</div>
                    <h3 class="step-title">Connect Your Brokerage</h3>
                    <p class="step-description">Link your brokerage account to verify your trading history and holdings.</p>
                </div>
            </div>
            
            <!-- Step 3 -->
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number">3</div>
                    <h3 class="step-title">Join the Community</h3>
                    <p class="step-description">Share insights, follow other traders, and grow your investment network.</p>
                </div>
            </div>
        </div>
    </div>
</section>

