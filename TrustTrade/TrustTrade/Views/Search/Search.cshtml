@{
    ViewData["Title"] = "Search Users";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold display-6">Search</h1>
        <p class="text-muted">Discover the TrustTrade community</p>
    </div>

    <div class="search-bar-wrapper mx-auto mb-4" style="max-width: 600px;">
        <form asp-controller="Search" asp-action="SearchPosts" method="get" class="input-group input-group-lg shadow rounded-pill overflow-hidden">
            <input type="text" class="form-control border-0 ps-4" id="searchTerm" name="search" placeholder="Search..." aria-label="Search">
            <button type="submit" class="input-group-text bg-white border-0 pe-4">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>

    <div id="searchResults">
        
    </div>
</div>

@section Scripts {
    <script src="~/js/searchuser.js"></script>
}

<style>
    .search-bar-wrapper input:focus {
        box-shadow: none;
    }

    .user-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: none;
        border-radius: 1rem;
        overflow: hidden;
    }

    .user-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.08);
    }

    .profile-img {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #f0f0f0;
    }

    .view-profile-btn {
        font-size: 0.85rem;
        padding: 6px 14px;
        border-radius: 0.5rem;
    }
</style>
