@model IEnumerable<TrustTrade.ViewModels.PostPreviewVM>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-file-earmark-x fs-1 text-secondary"></i>
        <h4 class="mt-3 text-muted">No posts found</h4>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var post in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card post-card h-100 shadow-sm p-3">
                    <div class="d-flex align-items-center mb-3">
                        <img src="@(post.ProfilePicture != null 
                            ? $"data:image/jpeg;base64,{Convert.ToBase64String(post.ProfilePicture)}"
                            : "/icons/defpfp.png")"
                             class="profile-img me-2" style="width: 48px; height: 48px; object-fit: cover;" />
                        <div>
                            <h6 class="fw-semibold mb-0">@post.UserName</h6>
                            <small class="text-muted">@post.TimeAgo</small>
                        </div>
                    </div>
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.Excerpt</p>
                    <div class="d-flex justify-content-between mt-3">
                        <small class="text-muted">@post.LikeCount Likes â€¢ @post.CommentCount Comments</small>
                        <a href="/Posts/Details/@post.Id" class="btn btn-sm btn-outline-primary">Read more</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
