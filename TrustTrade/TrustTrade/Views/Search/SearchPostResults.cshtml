@using TrustTrade.ViewModels
@model SearchPostResultsVM

@{
    ViewData["Title"] = "Post Search Results";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold display-6">Search Results for Posts</h1>
        <p class="text-muted">Showing results for "@Model.SearchQuery"</p>
    </div>


    <!-- Pagination -->
    <!-- Post Filters -->
    <div>
        <partial name="../Posts/_Filters" model="Model.PostFilters" />
    </div>

    <!-- Post Preview Feed -->
    <div class="mt-5">
        <partial name="../Posts/_Feed" model="Model.Posts" />
    </div>

    <!-- Pagination Controls -->
    <div class="mt-5">
        <partial name="../Posts/_Pagination" model="Model.Pagination" />
    </div>
</div>

@section Scripts {
    <script src="~/js/postFeed.js"></script>
}