<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="TrustTrade - A platform for verified traders to connect, share strategies, and build a trusted investment network." />
    <title>@ViewData["Title"] - TrustTrade</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/themeSwitcher.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <script src="~/js/ThemeSwitcher.js" asp-append-version="true"></script>
</head>
<body>
    <!-- Landing Page Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark py-3 landing-navbar">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Landing">
                <img src="/icons/TrustTradeLogo.png" alt="TrustTrade Logo" class="me-2" style="height: 40px;">
                <span class="ms-2 fw-bold">TrustTrade</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation links in navbar -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#how-it-works">How It Works</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <div class="theme-switch-wrapper ms-3">
                            <label class="theme-switch m-0" for="checkbox">
                                <input type="checkbox" id="checkbox" checked />
                                <div class="slider round">
                                    <i class="bi bi-sun-fill sun-icon"></i>
                                    <i class="bi bi-moon-stars-fill moon-icon"></i>
                                </div>
                            </label>
                        </div>
                    </li>
                    <li class="nav-item ms-lg-3">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light">Log in</a>
                    </li>
                    <li class="nav-item ms-lg-2">
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Sign up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer py-5">
        <div class="container">
            <div class="row">
                <p class="mt-2"><strong>Note:</strong> This is a capstone project. Links are for demonstration purposes only.</p>
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <img src="/icons/TrustTradeLogo.png" alt="TrustTrade" style="height: 40px;">
                    <p class="mt-3">Join the trusted trading community where verified investors share strategies and build connections.</p>
                    <div class="social-links mt-3">
                        <a href="#" class="me-2"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Company</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="footer-link">About Us</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Team</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Careers</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Blog</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Resources</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="footer-link">Help Center</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Community</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Webinars</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Events</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Legal</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="footer-link">Terms</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Privacy</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Security</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Licenses</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Support</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="footer-link">FAQ</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Contact</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Pricing</a></li>
                        <li class="mb-2"><a asp-controller="Support" asp-action="ContactSupport" class="footer-link">Support</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-7 col-lg-8">
                    <p>&copy; @DateTime.Now.Year TrustTrade. All rights reserved.</p>
                </div>
                <div class="col-md-5 col-lg-4 text-md-end">
                    <a href="#" class="text-reset me-3">Terms</a>
                    <a href="#" class="text-reset me-3">Privacy</a>
                    <a href="#" class="text-reset">Cookies</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>